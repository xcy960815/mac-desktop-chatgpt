{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "./types/*.d.ts"],
    "paths": {
      "*": ["node_modules/*"],
      "electron-positioner": ["types/electron-positioner.d.ts"],
      "electron-menubar":["./src/electron-menubar.ts"]
    }
  }
}
