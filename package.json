{
  "name": "desktop-chatgpt",
  "productName": "desktop-chatgpt",
  "version": "1.0.3",
  "description": "一款基于 electron + vite + typescript 开发的跨平台桌面级应用",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "electron-forge package",
    "start:prod": "npm run build && electron .",
    "package": "electron-forge package",
    "make": "electron-forge make --arch arm64,x64",
    "make:mac": "electron-forge make --platform darwin --arch arm64,x64",
    "make:win": "electron-forge make --platform win32 --arch x64 --targets @electron-forge/maker-zip",
    "make:win-installer": "electron-forge make --platform win32 --arch x64",
    "make:all": "npm run make:mac && npm run make:win",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron-forge/plugin-vite": "^7.8.0",
    "@electron/fuses": "^1.7.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "electron": "^36.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^2.8.7",
    "pretty-quick": "^1.8.0",
    "terser": "^5.39.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "vcm-cli": "^1.0.6",
    "vite": "^6.2.3"
  },
  "keywords": [
    "desktop",
    "chatgpt",
    "electron",
    "vite",
    "typescript",
    "openai",
    "deepseek",
    "cross-platform",
    "windows",
    "macos"
  ],
  "author": {
    "name": "xcy960815",
    "email": "18763006837@163.com"
  },
  "license": "MIT",
  "dependencies": {
    "electron-context-menu": "^3.6.1",
    "electron-positioner": "^4.1.0",
    "electron-squirrel-startup": "^1.0.1"
  },
  "volta": {
    "node": "20.19.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
