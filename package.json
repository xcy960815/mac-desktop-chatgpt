{
  "name": "chathub-desktop",
  "productName": "ChatHub Desktop",
  "version": "1.0.13",
  "description": "一款基于 electron + vite + typescript 开发的跨平台桌面级应用，统一承载 ChatGPT、DeepSeek、Grok、Gemini、Qwen 与 Doubao 等模型网页端，免去来回切换。",
  "main": ".vite/build/main.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "electron-forge start",
    "build": "npm run package",
    "start:prod": "npm run build && electron .",
    "package": "electron-forge package",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0",
    "make": "npm run make:mac && npm run make:win",
    "make:mac:arm64": "electron-forge make --platform darwin --arch arm64",
    "make:mac:x64": "electron-forge make --platform darwin --arch x64",
    "make:mac": "npm run make:mac:arm64 && npm run make:mac:x64",
    "make:win": "electron-forge make --platform win32 --arch x64 --targets @electron-forge/maker-zip",
    "make:win-installer": "electron-forge make --platform win32 --arch x64",
    "make:all": "npm run make:mac && npm run make:win",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron-forge/plugin-vite": "^7.8.0",
    "@electron/fuses": "^1.7.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "conventional-changelog-cli": "^5.0.0",
    "electron": "^40.2.1",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.0.0",
    "terser": "^5.39.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.3"
  },
  "keywords": [
    "desktop",
    "chatgpt",
    "electron",
    "vite",
    "typescript",
    "openai",
    "deepseek",
    "grok",
    "gemini",
    "qwen",
    "doubao",
    "cross-platform",
    "windows",
    "macos"
  ],
  "author": {
    "name": "xcy960815",
    "email": "18763006837@163.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xcy960815/mac-desktop-chatgpt.git"
  },
  "license": "MIT",
  "dependencies": {
    "electron-context-menu": "^3.6.1"
  },
  "volta": {
    "node": "20.19.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.24.0",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
